{
  "dev-guidelines": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": [
        "implement",
        "create",
        "build",
        "add feature",
        "code",
        "function",
        "component",
        "module",
        "class",
        "refactor"
      ],
      "intentPatterns": [
        "(create|add|build|implement).*?(feature|component|function|module|class)",
        "(how to|best practice|should I).*?(code|implement|structure)",
        "(fix|debug|resolve).*?(error|bug|issue)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*",
        "lib/**/*",
        "**/*.ts",
        "**/*.js",
        "**/*.py",
        "**/*.cpp",
        "**/*.h"
      ],
      "contentPatterns": []
    }
  },
  "research-verifier": {
    "type": "workflow",
    "enforcement": "suggest",
    "priority": "medium",
    "promptTriggers": {
      "keywords": [
        "best practice",
        "should I",
        "how should",
        "correct way",
        "recommended",
        "standard",
        "pattern",
        "convention",
        "proper way",
        "official",
        "according to",
        "the right way",
        "implementation"
      ],
      "intentPatterns": [
        "(what is|what's).*?(best|correct|proper|standard|recommended)",
        "(how|should).*?(implement|structure|organize|design)",
        "(is this|is it).*?(correct|right|proper|standard)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [],
      "contentPatterns": []
    }
  }
}
