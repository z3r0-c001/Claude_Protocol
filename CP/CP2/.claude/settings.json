{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.py\""
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/pre-write-check.sh \"$TOOL_INPUT\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/dangerous-command-check.sh \"$TOOL_INPUT\" 2>/dev/null || true"
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/post-write-validate.sh \"$TOOL_INPUT_FILE_PATH\" json 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bash .claude/scripts/context-detector.sh \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],

    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/laziness-check.sh . json 2>/dev/null || true"
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "Grep",
      "Glob",
      "Task",
      "WebSearch",
      "WebFetch"
    ],
    "deny": []
  }
}
