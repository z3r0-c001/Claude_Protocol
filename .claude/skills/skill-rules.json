{
  "_meta": {
    "description": "CUSTOM EXTENSION - Not part of official Claude Code",
    "purpose": "Auto-suggests skills based on prompt keywords and file patterns",
    "implementation": "Parsed by skill-activation-prompt.py hook on UserPromptSubmit",
    "note": "Claude Code does not natively support skill auto-activation. This is a protocol-specific feature."
  },
  "dev-guidelines": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": [
        "implement",
        "create",
        "build",
        "add feature",
        "code",
        "function",
        "component",
        "module",
        "class",
        "refactor"
      ],
      "intentPatterns": [
        "(create|add|build|implement).*?(feature|component|function|module|class)",
        "(how to|best practice|should I).*?(code|implement|structure)",
        "(fix|debug|resolve).*?(error|bug|issue)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/**/*",
        "lib/**/*",
        "**/*.ts",
        "**/*.js",
        "**/*.py",
        "**/*.go",
        "**/*.rs"
      ],
      "contentPatterns": []
    }
  },
  "frontend-design": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": [
        "UI",
        "frontend",
        "component",
        "button",
        "form",
        "modal",
        "dialog",
        "layout",
        "responsive",
        "accessibility",
        "a11y",
        "CSS",
        "styling",
        "Tailwind",
        "design system",
        "user interface",
        "navigation",
        "header",
        "footer",
        "card",
        "input",
        "dropdown",
        "menu",
        "sidebar"
      ],
      "intentPatterns": [
        "(create|build|design|implement).*?(UI|component|button|form|page|layout)",
        "(style|design).*?(component|page|interface)",
        "(make|create).*?(responsive|accessible|consistent)",
        "(add|implement).*?(dark mode|theme|styling)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/*.tsx",
        "**/*.jsx",
        "**/*.vue",
        "**/*.svelte",
        "**/*.css",
        "**/*.scss",
        "**/*.less",
        "**/components/**",
        "**/ui/**",
        "**/styles/**"
      ],
      "contentPatterns": [
        "className",
        "styled",
        "css",
        "tailwind"
      ]
    },
    "autoInvoke": {
      "agents": ["frontend-designer", "ui-researcher"]
    }
  },
