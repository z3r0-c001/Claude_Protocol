{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "Grep",
      "Glob",
      "Task",
      "WebSearch",
      "WebFetch",
      "TodoRead",
      "TodoWrite",
      "NotebookEdit",
      "mcp__memory__:*",
      "mcp__filesystem__:*",
      "Bash(mkdir:*)",
      "Bash(chmod +x:*)",
      "Bash(chmod 755:*)",
      "Bash(chmod 644:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(which:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(rustc:*)",
      "Bash(tsc:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(jest:*)",
      "Bash(pytest:*)",
      "Bash(make:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm -rf node_modules)",
      "Bash(rm -rf dist)",
      "Bash(rm -rf build)",
      "Bash(rm -rf .cache)",
      "Bash(rm -rf coverage)",
      "Bash(rm -rf __pycache__)",
      "Bash(rm -rf .pytest_cache)",
      "Bash(rm -f:*)",
      "Bash(test:*)",
      "Bash([:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(tr:*)",
      "Bash(xargs:*)",
      "Bash(env:*)",
      "Bash(export:*)",
      "Bash(source:*)",
      "Bash(.:*)",
      "Bash(bash:*)",
      "Bash(sh:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(tar:*)",
      "Bash(unzip:*)",
      "Bash(zip:*)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf $HOME)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=/dev/zero:*)",
      "Bash(dd if=/dev/random:*)",
      "Bash(> /dev/sd:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(init:*)",
      "Bash(systemctl:*)",
      "Bash(service:*)",
      "Bash(kill -9 1)",
      "Bash(pkill:*)",
      "Bash(killall:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/spawn-watcher-hook.sh\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bash \".claude/hooks/laziness-injector.sh\""
          },
          {
            "type": "command",
            "command": "python3 \".claude/hooks/skill-activation-prompt.py\""
          },
          {
            "type": "command",
            "command": "bash \".claude/hooks/query-analyzer.sh\" \"$PROMPT\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "python3 \".claude/hooks/context-loader.py\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/pre-write-check.sh\""
          },
          {
            "type": "command",
            "command": "python3 \".claude/hooks/pretool-laziness-check.py\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python3 \".claude/hooks/pretool-hallucination-check.py\"",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \".claude/hooks/dangerous-command-check.py\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/file-edit-tracker.sh\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bash \".claude/hooks/post-write-validate.sh\" \"$TOOL_INPUT_FILE_PATH\" json 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bash \".claude/hooks/context-detector.sh\" \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/subagent-output-check.sh\" \"$TOOL_OUTPUT\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "WebSearch|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/research-quality-check.sh\" \"$TOOL_OUTPUT\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/laziness-check.sh\" \"$ASSISTANT_RESPONSE\""
          },
          {
            "type": "command",
            "command": "bash \".claude/hooks/honesty-check.sh\" \"$ASSISTANT_RESPONSE\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bash \".claude/hooks/stop-verify.sh\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/hooks/research-validator.sh\" \"$TOOL_OUTPUT\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
